<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.blogspot.bihaika.android.intervaltimer.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spnr_main_tasklist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_medium"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btn_main_delete"
            android:layout_width="@dimen/button_medium"
            android:layout_height="@dimen/button_medium"
            android:layout_margin="@dimen/space_small"
            android:background="@android:drawable/ic_delete"
            android:contentDescription="@string/delete_task" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/space_medium"
        android:layout_marginTop="@dimen/space_medium"
        android:background="@android:color/darker_gray" />

    <ListView
        android:id="@+id/lsv_main_taskdetails"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/space_medium"
        android:layout_marginTop="@dimen/space_medium"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_small"
        android:layout_marginTop="@dimen/space_medium"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_main_reset"
            android:layout_width="@dimen/button_medium"
            android:layout_height="@dimen/button_medium"
            android:layout_margin="@dimen/space_small"
            android:background="@drawable/stop"
            android:contentDescription="@string/reset_button" />

        <ImageButton
            android:id="@+id/btn_main_start"
            android:layout_width="@dimen/button_large"
            android:layout_height="@dimen/button_large"
            android:layout_margin="@dimen/space_small"
            android:background="@drawable/start"
            android:contentDescription="@string/start_button" />

    </LinearLayout>

</LinearLayout>
